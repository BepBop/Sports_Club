<script>
    const el = document.querySelector('main');
    el.addEventListener("click", fx);

    function fx() {
        if (el.scrollLeft === 0) {
            el.scrollLeft = 5000;
        } else el.scrollLeft = 0;
    }

</script>

<script>

    let i = 0;
    let images = [];
    let time = 3000;
    const x = document.getElementById("pica");

    images[0] = "11.jpg";
    images[1] = "33.jpg";
    images[2] = "22.jpg";

    x.onclick = fxx();

    function fxx() {
        x.src = images[i];
        if (i < images.length - 1) {
            i++;
        } else {

            i = 0;
        }
        setTimeout("fxx()", time);
    }


</script>

<script>
function main {}
    let i = 0;
    let flag;
    let images = [];
    images[0] = "11.jpg";
    images[1] = "33.jpg";
    images[2] = "22.jpg";
    let time = 500;

    let x = document.getElementById("pica");
    let y = document.getElementById("picb");

    x.addEventListener("mouseover", () => {
        flag = true;
        ab.call(x);
    });
    x.addEventListener("mouseout", () => {
        flag = false;
    });


    function ab() {

        if (flag) {

            console.log(this);
            sex = this;


            sex.src = images[i];

            if (i < images.length - 1) {
                i++;
            } else {
                i = 0;

            }

            setTimeout("ab.call(sex)", time);
        }

    }

    let el = document.getElementById("main");
    el.addEventListener("click", fx);

    function fx() {
        if (el.scrollLeft === 0) {
            el.scrollLeft = 5000;
        } else el.scrollLeft = 0;
    }

</script>



    window.onload = fxx;

    xxx.addEventListener("mouseover", f1);
    xxx.addEventListener("mouseout", f2);

    function fxx() {
        if (flag === true) {
            xxx.src = images[i];
            if (i < images.length - 1) {
                i++;
            } else {
                i = 0;

            }
        }

        setTimeout("fxx()", time);
    }

    function f1() {
        flag = true;
    }

    function f2() {
        flag = false;
    }



function ab() {

    if (flag) {

        console.log(this);
        sex = this;


        this.src = images[i];

        if (i < images.length - 1) {
            i++;
        } else {
            i = 0;

        }

        setTimeout("ab.call(sex)", 1000);
    }

}

